{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "baseUrl":"*",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"]
}
